@{
  Layout = "_Layout";
}

@using FindRestaurant.Models;
@model List<FindRestaurant.Models.Food>;

<h1>Items</h1>

@if (@Model.Count == 0)
{
  <h3>No items have been added yet!</h3>
} 

@foreach (Food food in Model)
{
  <li>@Html.ActionLink($"{food.Description}", "Details", new { id = food.FoodId })</li>
}