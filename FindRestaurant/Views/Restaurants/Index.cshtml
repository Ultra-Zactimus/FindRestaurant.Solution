@{
  Layout = "_Layout";
}

@using FindRestaurant.Models;

<h1>Restaurants</h1>

@if (@Model.Count == 0)
{
  <h3>No restaurants have been added yet!</h3>
} 

<ul>
  @foreach(Restaurant rest in Model)
  {
    <li>@Html.ActionLink($"{rest.Name}", "Details", new { id = rest.RestaurantId })</li>
  }
</ul>

<p>@Html.ActionLink("Add new Restaurant", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>